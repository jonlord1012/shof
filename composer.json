{
    "name": "jonlord1012/shof",
    "description": "RESTful API and JWT on CI4",
    "type": "project",
	"homepage": "https://binjava.id",
    "license": "MIT",
	"authors": [
        {
            "name": "j.a.pambudi"
        }
    ],
    "require": {
        "codeigniter4/framework": "^4.1",
        "php": "^7.4 || ^8.0",
        "firebase/php-jwt": "^6.3"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
	"autoload": {
        "psr-4": {
            "App\\": "app",
            "Config\\": "app/Config"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
 
}
